@using System.Web.Optimization
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="@UICulture" dir="ltr" class="noscript">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title Gourmet Cargo&#8482;</title>

	<meta name="Keywords" content="Gourmet Cargo, feeds" />
	<meta name="Description" content="Gourment Cargo data feeds." />
	<meta name="Author" content="Paul Arnold" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

	<link rel="stylesheet" href="~/content/css/cargo.min.css" />

	@Scripts.RenderFormat("<script src=\"{0}\"></script>", "~/js/cargo")

	@RenderSection("Head", required: false)

</head>
<body>

	<div class="page">

		<header class="page-header">
			<h1>The Marvellous <a href="/">Gourmet CSV Processor</a>!&#8482; <span class="blink">BETA</span></h1>
		</header>

		<main>

			<noscript>
				<section class="alert error compact">
