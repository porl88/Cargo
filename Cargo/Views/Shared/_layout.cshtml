					<p>This site uses JavaScript and you will need to <a href="http://www.enable-javascript.com/">enable JavaScript</a> to use all its features.</p>
				</section>
			</noscript>

			@RenderBody()

		</main>

		@*<footer>
				<nav>
					<ul>
						<li>@Html.ActionLink("Home", "Index", "Home")</li>
					</ul>
				</nav>
			</footer>*@
	</div>

	@RenderSection("Scripts", required: false)

</body>
</html>
